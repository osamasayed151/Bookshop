<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    style="@style/CardView.Light"
    app:cardCornerRadius="8dp"
    android:elevation="3dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/img1"
        android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 29.4"
            android:textSize="15sp"
            android:textColor="@color/f"
            android:layout_toRightOf="@id/imageView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:foreground="@drawable/strikethrough_foreground"
            />
        <TextView
            android:id="@+id/after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 20.4"
            android:textColor="@color/red"
            android:textSize="15sp"
            android:layout_toRightOf="@id/before"
            android:layout_marginTop="13dp"
            android:layout_marginStart="13dp"/>
        <android.widget.Button
            android:id="@+id/favStatus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_favorite_red"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/bookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Head first java"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/color_text"
            android:layout_toRightOf="@id/imageView"
            android:layout_below="@id/before"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/bookDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/dialog_alert_title"
            android:textSize="13sp"
            android:textColor="@color/f"
            android:layout_toRightOf="@id/imageView"
            android:layout_below="@id/bookName"
            android:layout_marginStart="10dp"
            />

        <android.widget.Button
            android:id="@+id/addBasket"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@color/text_signup"
            android:text="@string/Add_to_Basket"
            android:layout_toRightOf="@id/imageView"
            android:layout_marginStart="10dp"
            android:textColor="@color/a"
            android:layout_marginEnd="10dp"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"/>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>